<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--    constructer based injection via name-->
    <bean name="actor" class="com.stackroute.spring.domain.Actor">
     <constructor-arg name="age" value="22"></constructor-arg>
        <constructor-arg name="name" value="ATUL"></constructor-arg>
        <constructor-arg name="gender" value="MALE"></constructor-arg>
    </bean>
<!--    constructar based injection via index-->
    <bean id="actor1" class="com.stackroute.spring.domain.Actor">
        <constructor-arg index="0" value="22"></constructor-arg>
        <constructor-arg index="1" value="atul"></constructor-arg>
        <constructor-arg index="2" value="Male"></constructor-arg>
    </bean>
<!--    setting the bean scope to prototype-->
    <bean name="movie" class="com.stackroute.spring.domain.Movie" scope="prototype">
        <property name="actor" ref="actor"></property>
    </bean>
    <bean name="movie1" class="com.stackroute.spring.domain.Movie">
        <property name="actor" ref="actor1"></property>
    </bean>

</beans>
